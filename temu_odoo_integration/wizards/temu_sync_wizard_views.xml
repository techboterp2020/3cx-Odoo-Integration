<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_temu_sync_wizard_form" model="ir.ui.view">
        <field name="name">temu.sync.wizard.form</field>
        <field name="model">temu.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="Manual Sync with Temu">
                <group>
                    <field name="sync_products"/>
                    <field name="sync_orders"/>
                    <field name="sync_inventory"/>
                </group>
                <footer>
                    <button name="action_run_sync" string="Run Sync" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_temu_sync_wizard" model="ir.actions.act_window">
        <field name="name">Manual Sync with Temu</field>
        <field name="res_model">temu.sync.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>